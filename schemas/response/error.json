{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "error.json",
    "type": "object",
    "title": "Error response",
    "description": "JSON body of the error response.",
    "properties": {
        "status": {
            "type": "string",
            "description": "Status of the response",
            "const": "error"
        },
        "reason": {
            "type": "string",
            "description": "Reason for the error"
        }
    },
    "required": [
        "status",
        "reason"
    ]
}
