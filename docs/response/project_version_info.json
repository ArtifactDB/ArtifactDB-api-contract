{
    "$id": "project_version_info.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "JSON body of the response for the `GET /projects/{project}/version/{version}/info` endpoint.",
    "properties": {
        "actions": {
            "description": "Actions to perform to resolve the anomalies when `status` is set to `\"error\"`.",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "anomalies": {
            "description": "Summary of anomalies when `status` is set to `\"error\"`.",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "permissions": {
            "description": "Permissions for this project version.",
            "properties": {
                "owners": {
                    "description": "Array of users who own the resource, i.e., can change permissions or create new versions.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "read_access": {
                    "description": "Type of read access.",
                    "enum": [
                        "none",
                        "viewers",
                        "public"
                    ],
                    "type": "string"
                },
                "scope": {
                    "description": "Scope of the permissions",
                    "enum": [
                        "project",
                        "version"
                    ],
                    "type": "string"
                },
                "viewers": {
                    "description": "Array of users who are allowed to view the resource.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "write_access": {
                    "description": "Type of write access.",
                    "enum": [
                        "none",
                        "owners"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "viewers",
                "readers",
                "read_access",
                "write_access",
                "scope"
            ],
            "type": "object"
        },
        "status": {
            "description": "Status of the project version.",
            "enum": [
                "ok",
                "error"
            ],
            "type": "string"
        }
    },
    "required": [
        "status",
        "permissions"
    ],
    "title": "Project version information response",
    "type": "object"
}
